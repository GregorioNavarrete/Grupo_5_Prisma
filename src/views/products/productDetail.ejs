    <section class="section1">
        <article class="ocultar_2">
            <h2 class="titulo"><%= producto.titulo %></h2>
            <div class="cont_estrellas "><i class="fa-solid fa-star estrella"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></div>
        </article>
