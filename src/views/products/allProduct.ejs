            <option value="Ebook">Ebook</option>
            <option value="audioLibro">AudioLibro</option>
        </select>
</div>

<div class="conte-filtro">
        <h5  class="titulo-filtro">Editorial</h5>
        <label for="editoriales"></label>
        <select id="editoriales" name="editoriales">
            <option value="sin-seleccion">Elige una editorial</option>
            <option value="anagrama">Anagrama</option>
            <option value="alfaguara">Alfaguara</option>
