        <div class="form-caja">
            <form action="/user/register" method="post" class="formulario" enctype="multipart/form-data">
                <h1>REGISTRO</h1>
                <div class="contenedor">
                    
                   
                   
                   
                   
                   
                   
                   
                   
                   
                   
                    <div class="input-contenedor">
                        <i class="fa-solid fa-user" style="color: #838486;"></i>

                        

                        <input class="input-txt" type="text" name="nombre" placeholder="Ingrese su Nombre" required>
                        <span class="error-message">Ingresa un nombre valido.</span>
                    </div>
                    <div class="input-contenedor"> 
                        <i class="fa-solid fa-user" style="color: #838486;"></i>
