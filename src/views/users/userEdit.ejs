<body>
	
	
	<!-- Container -->
	<div class="container" style="margin-top: 40px;">
		<div class="user-profile">
			<section class="user-img">
			<img class="user-avatar" src="/img/users/<%= user.imagen %> ">

			

			<form action="/user/profile/<%=user.id%>/edit?_method=DELETE" method="post" class="botones">
				<button class="borrar">Eliminar</button>
			</form>

			<form action="/">
			<button class="user-btn">
			<a class="user-btn-text" href="/user/logout">Borrar Perfil</a>
			</button>
			</form>
