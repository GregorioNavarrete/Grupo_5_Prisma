			<section class="user-text">
				<h2 class="user-titulo">EDITAR <%= user.nombre %> <%= user.apellido %> </h2>


				
                <form class="user-form-edit" action="/user/profile/<%=user.id%>/edit?_method=PUT" method="POST" enctype="multipart/form-data">

					<div class="user-input">
                        <div class="user-sub-input">Nombre</div>
                        <input class="user-input-txt" type="text" name="nombre" placeholder="Ingrese su Nombre" value="<%= user.nombre %>">
                    </div>

                    <div class="user-input"> 
                        <div class="user-sub-input">Apellido</div>
                        <input class="user-input-txt" type="text" name="apellido" placeholder="Ingrese su Apellido" value="<%= user.apellido %>" >
                        <!-- <span class="error-message">Ingresa un apellido valido.</span> -->
                    </div>

                    <div class="user-input">
                        <div class="user-sub-input">Usuario</div>
                        <input class="user-input-txt" type="text" name="usuario" placeholder="Ingrese un Usuario" value="<%= user.usuario %>" >
                        <!-- <span class="error-message">Ingresa un usuario valido.</span> -->
                    </div>

                    <div class="user-input">
                        <div class="user-sub-input">Email</div>
                        <input class="user-input-txt" type="email" name="email" placeholder="Ingrese un e-mail" value="<%= user.email %>"  >
                        <!-- <span class="error-message">Ingresa una dirección de correo electrónico válida.</span> -->
                    </div>

                    <!-- <div class="user-input">
                        <div class="user-sub-input">Cambiar Contraseña</div>
