<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head') %>
    <link rel="stylesheet" href="/css/userList.css">
    <title>Iniciar sesi√≥n en Libros Prisma</title>
    
</head>
<body>
<header>
    <%- include ('../partials/header') %>
</header>
    <main><br>

        
<div class="userlist-conte">
   <section class="userlist-cont-search">
    <div class="userlist-Search-users">
        <H2 class="userlist-titulo">Lista de Usuarios</H2>

        <form class="userlist-barra-busqueda-header" action="/admin/searchUser" method="GET">
                <input class="userlist-input-header" type="text" placeholder="Buscar" name="search">
                <button class="userlist-button-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                
        </form>

   </section>
   <br>

   <ul class="userlist-conte-usuarios">
        <% for(let i=0;i<Users.length;i++) { %>
        <li class="userlist-caja-usuario">
            
            <div class="userlist-conte-img">
            <img class="userlist-img" src="/img/users/<%= Users[i].imagen %>" alt="">
            </div>

            <section class="userlist-data">
                    <div class="userlist-data-text-titulo-conte"><p class="userlist-data-text-titulo">Nombre:</p> <p class="userlist-data-text"><%= Users[i].nombre %></p></div>
                    <div class="userlist-data-text-titulo-conte"><p class="userlist-data-text-titulo">Apellido:</p> <p class="userlist-data-text"><%= Users[i].apellido %></p></div>
                    <div class="userlist-data-text-titulo-conte"><p class="userlist-data-text-titulo">Correo:</p> <p class="userlist-data-text"><%= Users[i].email %></p></div>
                    <div class="userlist-data-text-titulo-conte"><p class="userlist-data-text-titulo">Categoria:</p> <p class="userlist-data-text"><%= Users[i].categoria %></p></div>
            </section>

            <br>
            <div class="userlist-btn-conte">
                <a href="../../user/profile/<%=Users[i].id%>/edit" class="userlist-btn">
					<button class="userlist-btn-editar">Editar</button>
				</a>
                <br>
                <form action="/admin/list/<%=Users[i].id  %>?_method=DELETE" method="post" class="userlist-btn">
                    <button class="userlist-btn-eliminar">Eliminar</button>
                </form>
            </div>
            <br>
        </li>
        <% } %>
   </ul>
   
</div>
<br>
</main>


<footer>
    <%- include ('../partials/footer') %>

</footer>

</body>