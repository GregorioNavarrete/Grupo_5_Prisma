                        <div  class="datos-text-form">Autor</div>
                        <select class="input-text" id="Autor" name="Autor" required>
                            <option value="">Seleccione un Autor</option>
                            <option value="1">Antoine de Saint-Exupéry</option>
                            <option value="2"> Collen Hoover</option>
                            <option value="3">Rick Riordan</option>
                            <option value="4">Suzanne Collins</option>
                            <option value="5">Cassandra Clare</option>
                            <option value="6">Stephenie Meyer</option>
                        </select>
                    </div><br><br>

                    <!-- <div  class="celda">
                        <div class="datos-text-form">Editorial</div>
